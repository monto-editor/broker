name:                monto-broker
version:             0.0.1
-- synopsis:            
-- description:         
license:             BSD3
license-file:        LICENSE
author:              Sven Keidel
maintainer:          svenkeidel@googlemail.com
-- copyright:           
category:            Editor
build-type:          Simple
-- extra-source-files:  
cabal-version:       >=1.10


library
  exposed-modules:     Monto.Broker,
                       Monto.VersionMessage,
                       Monto.ProductMessage,
                       Monto.ProductDependency,
                       Monto.ServerDependency
                       Monto.StaticDependencyManager,
                       Monto.DynamicDependencyManager,
                       Monto.DependencyManager,
                       Monto.ResourceManager,
                       Monto.Automaton,
                       Monto.Automaton.Compiled
  build-depends:       base,
                       aeson,
                       containers,
                       fgl,
                       semigroups,
                       text,
                       vector
  ghc-options:         -Wall -O2
  hs-source-dirs:      src/
  default-language:    Haskell2010

executable broker
  main-is:             Main.hs
  -- other-modules:       
  -- other-extensions:    
  ghc-options:         -Wall -O2 -threaded
  build-depends:       base,
                       aeson,
                       containers,
                       fgl,
                       monto-broker,
                       optparse-applicative,
                       text,
                       unix,
                       vector,
                       zeromq4-haskell
  hs-source-dirs:      broker/
  default-language:    Haskell2010

test-suite specs
  type:                exitcode-stdio-1.0
  ghc-options:         -Wall
  hs-source-dirs:      test
  main-is:             Spec.hs
  build-depends:       base,
                       QuickCheck,
                       containers,
                       fgl,
                       hspec,
                       monto-broker,
                       text,
                       vector
  default-language:    Haskell2010
